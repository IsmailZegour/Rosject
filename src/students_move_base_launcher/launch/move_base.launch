<launch>
  <!--- Run AMCL -->
  <include file="$(find students_package)/launch/amcl.launch" />
  <remap from="cmd_vel" to="/move_base/cmd_vel" />

  <!-- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find students_move_base_launcher)/params/move_base_params.yaml" command="load" />
    <rosparam file="$(find students_move_base_launcher)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find students_move_base_launcher)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find students_move_base_launcher)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find students_move_base_launcher)/params/global_costmap_params_map.yaml" command="load" />
    <rosparam file="$(find students_move_base_launcher)/params/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find students_move_base_launcher)/params/global_planner_params.yaml" command="load" />

    <param name="base_global_planner" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <param name="controller_frequency" value="5.0" />
    <param name="controller_patience" value="15.0" />
  </node>

</launch>